<?xml version="1.0" encoding="UTF-8"?>
<!--
  FastDDS profile to disable shared-memory transport.
  Useful on systems where /dev/shm locking fails (common on managed/remote setups),
  which otherwise spams: "RTPS_TRANSPORT_SHM Error ... open_and_lock_file failed".
-->
<profiles xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
  <transport_descriptors>
    <transport_descriptor>
      <transport_id>udp_transport</transport_id>
      <type>UDPv4</type>
    </transport_descriptor>
  </transport_descriptors>

  <participant profile_name="go2_no_shm_participant" is_default_profile="true">
    <rtps>
      <useBuiltinTransports>false</useBuiltinTransports>
      <userTransports>
        <transport_id>udp_transport</transport_id>
      </userTransports>
    </rtps>
  </participant>
</profiles>
